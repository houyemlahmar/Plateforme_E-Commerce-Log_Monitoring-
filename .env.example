# Flask Configuration
FLASK_APP=main.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production
HOST=0.0.0.0
PORT=5000

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_INDEX_PREFIX=ecommerce-logs

# Logstash Configuration
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000
LOGSTASH_BEATS_PORT=5044

# Kibana Configuration
KIBANA_HOST=localhost
KIBANA_PORT=5601

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=ecommerce_logs
MONGODB_USER=admin
MONGODB_PASSWORD=changeme
MONGODB_URI=mongodb://admin:changeme@localhost:27017/ecommerce_logs?authSource=admin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600

# Application Configuration
MAX_UPLOAD_SIZE=104857600  # 100MB
ALLOWED_LOG_EXTENSIONS=log,txt,json
LOGS_RETENTION_DAYS=90

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600

# Performance
WORKER_PROCESSES=4
WORKER_THREADS=2
REQUEST_TIMEOUT=300

# Monitoring
SENTRY_DSN=
LOG_LEVEL=INFO

# Fraud Detection
FRAUD_DETECTION_ENABLED=True
FRAUD_SCORE_THRESHOLD=75
MAX_FAILED_ATTEMPTS=5

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
ALERT_EMAIL_TO=alerts@example.com
